@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container my-5 w-75">
    <div class="text-center py-3 rounded-3 shadow-sm" style="background: linear-gradient(135deg,#ab7461, #343a40); color: white;">
        <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
        <p class="lead mt-2 text-secondary">Protecting your data is our priority.</p>
    </div>
    
    <div class="mt-4 p-4 bg-light rounded-3 shadow-sm border border-dark">
        <h2 class="fw-bold mb-3">Our Commitment</h2>
        <p>
            Your privacy is critically important to us. This page outlines the details of how we handle, process, 
            and protect your personal information in compliance with applicable laws.
        </p>
        
        <div class="row gy-4 mt-4">
            <div class="col-md-4 text-center">
                <i class="bi bi-person-circle fs-1 text-primary"></i>
                <h4 class="mt-3 fw-bold">Data We Collect</h4>
                <p>We collect information to provide better services to our users.</p>
            </div>
            
            <div class="col-md-4 text-center">
                <i class="bi bi-shield-lock fs-1 text-success"></i>
                <h4 class="mt-3 fw-bold">How We Use Data</h4>
                <p>Your data is used responsibly and only for the purposes outlined here.</p>
            </div>
            
            <div class="col-md-4 text-center">
                <i class="bi bi-bookmark-check fs-1 text-danger"></i>
                <h4 class="mt-3 fw-bold">Your Rights</h4>
                <p>You have the right to access, modify, or delete your personal data at any time.</p>
            </div>
        </div>
    </div>
</div>