@using nSkinShop.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - nSkinShop</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/nSkinShop.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

</head>
<body>
<div class="container-fluid">
    <div class="row flex-nowrap">

        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">


                <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom mb-2 company-name-hover">
                    <div class="container-fluid justify-content-center mb-1">
                        <div class="d-flex align-items-center bg-secondary px-4 py-2 rounded">
                            <a href="@Url.Action("Index", "Home", new { area = "" })" class="text-decoration-none ">
                                <span class="text-dark d-flex align-items-center fs-5">
                                    <i class="fs-5 bi-bag-heart-fill me-2"></i> nSkinShop
                                </span>
                            </a>
                        </div>
                    </div>
                </nav>


                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start fs-6"
                    id="menu">

                    <li class="nav-item">
                        <a class="nav-link px-0 align-middle text-secondary" asp-area="Customer" asp-controller="Home"
                           asp-action="Index">
                            <i class="fs-5 bi-house-fill"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link px-0 align-middle text-secondary" asp-area="Customer" asp-controller="Home"
                           asp-action="Privacy">
                            <i class="fs-5 bi-lock-fill"></i> <span class="ms-1 d-none d-sm-inline">Privacy</span>
                        </a>
                    </li>
                    
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse"
                               class="nav-link px-0 align-middle text-secondary d-flex justify-content-between">
                                <i class="fs-4 bi-folder-fill"></i>
                                <span class="ms-2 d-none d-sm-inline mt-1">Content Management</span>
                                <i class="fs-6 bi-chevron-compact-right ms-1 mt-1"></i>
                            </a>
                            <ul class="collapse nav flex-column ms-5" id="submenu1" data-bs-parent="#menu">
                                <li class="nav-item">
                                    <a class="nav-link px-0 text-secondary d-flex align-items-center" asp-area="Admin"
                                       asp-controller="Company" asp-action="Index">
                                        <i class="fs-5 bi-buildings-fill me-2"></i>
                                        <span>Company</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-0 text-secondary d-flex align-items-center" asp-area="Admin"
                                       asp-controller="Category" asp-action="Index">
                                        <i class="fs-5 bi-box-seam me-2"></i>
                                        <span>Category</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-0 text-secondary d-flex align-items-center" asp-area="Admin"
                                       asp-controller="Product" asp-action="Index">
                                        <i class="fs-5 bi-flower1 me-2"></i>
                                        <span>Product</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    
                </ul>
                <hr>
                <div>
                    <partial name="_LoginPartial"/>
                </div>
                
            </div>
        </div>

        <div class="col py-3">
            <main role="main" class="pb-3">
                <partial name="_Notification"/>
                @RenderBody()
            </main>
        </div>
    </div>
</div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</html>