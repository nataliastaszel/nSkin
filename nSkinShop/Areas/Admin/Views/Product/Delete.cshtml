@model Product

<div class="card shadow border-dark mt-4 rounded-5 position-relative" style="width: 80%; justify-self: center;">
    <div
        class="position-absolute start-50 bg-danger text-white border border-dark rounded px-4 py-2"
        style="transform: translate(-50%, -50%);">
        <h3 class="mb-0 fs-6 fw-normal">Delete Product</h3>
    </div>
    <div class="card-body p-4">
        <input asp-for="Id" hidden/>
        <form method="post" class="row">
            <div class="p-3 ">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control shadow">
                    <label asp-for="Title" class="mt-1"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Brand" disabled class="form-control shadow">
                    <label asp-for="Brand" class="mt-1"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" disabled class="form-control shadow"></textarea>
                    <label asp-for="Description" class="mt-1"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control shadow">
                    <label asp-for="Price" class="mt-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100ml" disabled class="form-control shadow">
                    <label asp-for="Price100ml" class="mt-2"></label>
                </div>
                <div class="row mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index"
                           class="btn btn-outline-primary border form-control">Back to list</a></div>
                </div>
            </div>
        </form>
    </div>
</div>

