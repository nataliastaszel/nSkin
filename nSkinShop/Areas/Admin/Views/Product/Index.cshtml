@using System.Globalization
@model List<Product>

<div class="card shadow mt-5 rounded-5 border-dark position-relative" style="width: 90%; justify-self: center;">
    <div
        class="position-absolute start-50 bg-primary-subtle text-dark border border-dark rounded px-4 py-2"
        style="transform: translate(-50%, -50%);">
        <h3 class="mb-0 fs-6 fw-normal">Product List</h3>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-3">
                <div class=" text-end">
                    <a asp-controller="Product" asp-action="Upsert" class="btn btn-dark">
                        <i class="bi bi-plus-circle m-1"></i> Create New Product
                    </a>
                </div>
            </div>
            <table class="table text-center ">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Brand</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var Product in Model)
                {
                    <tr>
                        <td>@Product.Title</td>
                        <td>@Product.Brand</td>
                        <td>@Product.Description</td>
                        <td>@Product.Price.ToString("C", new CultureInfo("en-US"))</td>
                        <td>@Product.Category.Name</td>
                        <td class="d-flex justify-content-center align-items-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@Product.Id"
                                   class="btn btn-dark"> <i
                                        class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@Product.Id"
                                   class="btn btn-danger mx-1"> <i
                                        class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>

