
@page
@model LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow  rounded-3 border-dark position-relative ">
                <div class="text-center p-3 position-relative">
                    <div
                        class="position-absolute  z-1 start-50  px-3 py-1 rounded border border-dark bg-primary-subtle text-dark"
                        style="transform: translate(-50%, -98%)">
                        <h3 class="mb-0 fs-5 fw-normal">Logout</h3>
                    </div>
                </div>
                <div class="card-body text-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="lead mt-3">Are you sure you want to log out?</p>
                        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill">
                                <i class="bi-box-arrow-right me-1"></i> Logout
                            </button>
                        </form>
                        <a href="@Url.Page("/", new { area = "" })"
                           class="btn btn-secondary px-4 py-2 rounded-pill ms-2">
                            <i class="bi-arrow-left me-1"></i> Cancel
                        </a>
                    }
                    else
                    {
                        <p class="lead mt-1 text-success">You have successfully logged out!</p>
                        <a href="@Url.Page("/", new { area = "" })" class="btn btn-dark px-4 py-2">
                            <i class="bi-house me-1"></i> Go to Homepage
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>